            <th>{{ category.nom }}</th>
			{% endfor %}
          </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
        <tr>
            <td>
            	<a href="{{ path('mgatePersonne_membre_voir', {'id': membre.id}) }}">{{ membre.personne ? membre.personne.prenom }}  {{ membre.personne ? membre.personne.nom }}</a>
